{% extends "layout.njk" %}

{% block head %}
<title>Students</title>
{% endblock head %}

{% block content %}
<main>
    <section class="teacherProfile tableContainer">
        <a href="/students/create">Novo</a>
        <table id="table_student">
            <thead>
                <tr>
                    <th>Aluno</th>
                    <th>Email</th>
                    <th>Ano escolar</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in student %}
                <tr>
                    <td>
                        <span style="background-image: url('{{student.avatar_url}}')"></span>
                        {{student.name}}
                    </td>
                    <td>{{student.mail}}</td>
                    <td>{{student.grade}}</td>
                    <td><a href="/students/{{student.id}}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>
{% endblock content %}