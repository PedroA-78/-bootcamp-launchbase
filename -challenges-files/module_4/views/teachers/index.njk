{% extends "layout.njk" %}

{% block head %}
<title>Teachers</title>
{% endblock head %}

{% block content %}
<main>
    <section class="teacherProfile tableContainer">
        <a href="/teachers/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Discipina</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teacher %}
                <tr>
                    <td>
                        <span style="background-image: url('{{teacher.avatar_url}}')"></span>
                        {{teacher.name}}
                    </td>
                    <td>
                        {% for sub in teacher.sub %}
                        <span>{{sub}}</span>
                        {% endfor %}
                    </td>
                    <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>
{% endblock content %}