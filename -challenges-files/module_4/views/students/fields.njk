<div class="items">
    <label class="lblItem" for="avatar_url">Avatar URL</label>
    <input type="url" name="avatar_url" id="avatar_url" value="{{student.avatar_url}}" placeholder="https://">
</div>

<div class="items">
    <label class="lblItem" for="name">Nome</label>
    <input type="text" name="name" id="name" value="{{student.name}}" placeholder="Nome do aluno">
</div>

<div class="items">
    <label class="lblItem" for="mail">Email</label>
    <input type="email" name="mail" id="mail" value="{{student.mail}}">
</div>

<div class="items">
    <label class="lblItem" for="birth">Data de nascimento</label>
    <input type="date" name="birth" id="birth" value="{{student.birth}}">
</div>

<div class="items">
    <label class="lblItem" for="school_year">Ano escolar</label>
    <select name="school_year" id="school_year">
        <option value="5EF" {% if student.school_year == "5EF"  %}selected{% endif %}>5° ano - ensino fundamental I</option>
        <option value="6EF" {% if student.school_year == "6EF"  %}selected{% endif %}>6° ano - ensino fundamental II</option>
        <option value="7EF" {% if student.school_year == "7EF"  %}selected{% endif %}>7° ano - ensino fundamental II</option>
        <option value="8EF" {% if student.school_year == "8EF"  %}selected{% endif %}>8° ano - ensino fundamental II</option>
        <option value="9EF" {% if student.school_year == "9EF"  %}selected{% endif %}>9° ano - ensino fundamental II</option>
        <option value="1EM" {% if student.school_year == "1EM"  %}selected{% endif %}>1° ano - ensino médio</option>
        <option value="2EM" {% if student.school_year == "2EM"  %}selected{% endif %}>2° ano - ensino médio</option>
        <option value="3EM" {% if student.school_year == "3EM"  %}selected{% endif %}>3° ano - ensino médio</option>
    </select>
</div>

<div class="items">
    <label class="lblItem" for="workload">Carga horária semanal</label>
    <input type="number" name="workload" id="workload" placeholder="Digite a carga horária em horas" value="{{student.workload}}">
</div>