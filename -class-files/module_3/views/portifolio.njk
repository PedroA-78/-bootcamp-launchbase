{% extends "layout.njk" %}

{% block head %}
    <title>Aulas - Mayk Brito</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">
{% endblock %}

{% block content %}
    <main>
        <section class="classes_container">
            <h1>Aulas</h1>
        </section>

        <section class="cards_container">

            {% for item in items %}

                <div class="card" id="{{item.id}}">
                    <div class="card_image_container {{ 'true_featured' if item.featured }}">
                        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="{{item.title}}">
                        {% if item.featured %}
                            <div class="featured">Featured</div>
                        {% endif %}
                    </div>
                    <div class="card_content">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="card_info">
                        <p>{{item.duration}}</p>
                        <p class="card_price">{{item.price}}</p>
                    </div>
                </div>

            {% endfor %}

        </section>
    </main>

    <script src="/js/cards.js"></script>
{% endblock %}