{% extends "layout.njk" %}

{% block head %}
<title>Gym Manager - Instructors</title>
{% endblock head %}

{% block content %}
    <main>
        <div class="card table_container">
            <a href="/instructors/create">Novo</a>
            <table>
                <thead>
                    <tr>
                        <th>Instructor</th>
                        <th>Atendimento</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for instructor in instructor %}
                        <tr>
                            <td>
                                <span style="background-image: url('{{instructor.avatar_url}}')"></span>
                                {{instructor.name}}
                            </td>
                            <td>
                                {% for service in instructor.service %}
                                <span>{{service}}</span>
                                {% endfor %}
                            </td>
                            <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
                        </tr>
                    {% endfor %}
                    
                </tbody>
            </table>
        </div>
    </main>
{% endblock content %}