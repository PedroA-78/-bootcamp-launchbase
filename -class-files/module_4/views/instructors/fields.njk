<div class="items">
    <label class="lblItem" for="avatar_url">Avatar URL</label>
    <input type="url" name="avatar_url" id="avatar_url" value="{{instructor.avatar_url}}" placeholder="https://">
</div>

<div class="items">
    <label class="lblItem" for="name">Instructor</label>
    <input type="text" name="name" id="name" value="{{instructor.name}}" placeholder="Nome do instrutor">
</div>

<div class="items">
    <label class="lblItem" for="birth">Data de nascimento</label>
    <input type="date" name="birth" id="birth" value="{{instructor.birth}}">
</div>

<div class="items">
    <label class="lblItem">Sexo</label>
    
    <label class="lblGender" for="male"><input type="radio" name="gender" id="male" value="M" {% if instructor.gender == "M" %}
    checked
    {% endif %}>Masculino</label>
    
    <label class="lblGender" for="female"><input type="radio" name="gender" id="female" value="F" {% if instructor.gender == "F" %}
    checked
    {% endif %}>Feminino</label>
</div>

<div class="items">
    <label class="lblItem" for="services">Área de atuação</label>
    <input type="text" name="services" id="services" value="{{instructor.services}}"  placeholder="Separe os serviços prestados por vírgula.">
</div>