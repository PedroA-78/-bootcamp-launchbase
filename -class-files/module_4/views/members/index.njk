{% extends "layout.njk" %}

{% block head %}
<title>Gym Manager - Members</title>
{% endblock head %}

{% block content %}
    <main>
        <div class="card table_container">
            <a href="/members/create">Novo</a>
            <table>
                <thead>
                    <tr>
                        <th>Membro</th>
                        <th>Email</th>
                        <th>Peso</th>
                        <th>Altura</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for member in member %}
                        <tr>
                            <td>
                                <span style="background-image: url('{{member.avatar_url}}')"></span>
                                {{member.name}}
                            </td>
                            <td>{{member.email}}</td>
                            <td>{{member.weight}}kg</td>
                            <td>{{member.height}}cm</td>
                            <td><a href="/members/{{member.id}}">Ver</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock content %}