<div class="items">
    <label class="lblItem" for="avatar_url">Avatar URL</label>
    <input type="url" name="avatar_url" id="avatar_url" value="{{instructor.avatar_url}}">
</div>

<div class="items">
    <label class="lblItem" for="name">Instructor</label>
    <input type="text" name="name" id="name" placeholder="Instructor's name" value="{{instructor.name}}">
</div>

<div class="items">
    <label class="lblItem" for="birth">Birth date</label>
    <input type="date" name="birth" id="birth"  value="{{instructor.birth}}">
</div>

<div class="items">
    <label class="lblItem">Gender</label>

    <label class="lblGender" for="male">
        <input type="radio" name="gender" id="male" value="M" checked>
        Male
    </label>

    <label class="lblGender" for="female">
        <input type="radio" name="gender" id="female" value="F" {% if instructor.gender == "F" %}
        checked
        {% endif %}>
        Female
    </label>
</div>

<div class="items">
    <label class="lblItem" for="services">Occupation area</label>
    <input type="text" name="services" id="services" placeholder="Separate the services provided by comma."  value="{{instructor.services}}">
</div>